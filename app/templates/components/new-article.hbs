{{#if addNewArticle}}
<h1>New Article</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="subtitle">Subtitle</label>
      {{input value=subtitle id="subtitle"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveArticle'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'createArticle'}}>New Article</button>
{{/if}}
